{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "@tarquinen/opencode-dcp@latest",
    "opencode-websearch-cited@1.2.0"
  ],
  "provider": {
    "copilot": {
      "models": {
        "claude-opus-4.5": {
          "name": "Claude Opus 4.5"
        },
        "claude-sonnet-4.5": {
          "name": "Claude Sonnet 4.5"
        },
        "claude-haiku-4.5": {
          "name": "Claude Haiku 4.5"
        },
        "gpt-4.5": {
          "name": "GPT-4.5"
        },
        "gpt-4.5-turbo": {
          "name": "GPT-4.5 Turbo"
        },
        "gpt-4.5-vision": {
          "name": "GPT-4.5 Vision"
        },
        "gpt-4-5.2": {
          "name": "GPT-4 5.2"
        },
        "gpt-4-5.2-turbo": {
          "name": "GPT-4 5.2 Turbo"
        },
        "gpt-4-5.2-vision": {
          "name": "GPT-4 5.2 Vision"
        },
        "gpt-4o": {
          "name": "GPT-4o"
        },
        "gpt-4o-mini": {
          "name": "GPT-4o Mini"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "${CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "everything": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-everything"],
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": ["uvx", "mcp-server-fetch"],
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/nghiapham/.config/opencode"
      ],
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "time": {
      "type": "local",
      "command": ["uvx", "mcp-server-time"],
      "enabled": true
    }
  }
}
